generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement()) @map("user_id")
  uuid      String   @unique @default(uuid())
  email     String   @unique
  name      String?  @unique
  password  String?
  createdAt DateTime @default(now()) @map("created_at")
  Post      Post[]

  @@map(name: "users")
}

model Post {
  id        Int      @id @default(autoincrement()) @map("post_id") // rename column field
  uuid      String   @unique @default(uuid())
  title     String
  content   String? // ? nullable
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id])
  userId    Int

  @@map(name: "posts")
}
